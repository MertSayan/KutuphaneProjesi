@model ResultBookDto
<section class="container mt-5">
    <div class="row">
        <!-- Kitap Resmi -->
        <div class="col-md-4">
            <img src="@Model.BookImageUrl" class="img-fluid rounded shadow-sm" style="width: 300px; height: 400px; object-fit: cover;">
        </div>

        <!-- Kitap Bilgileri -->
        <div class="col-md-8">
            <h2 class="font-weight-bold">@Model.Title</h2>

            <div class="mt-3">
                <h5>Yazar: </h5>
                <p>@Model.AuthorName</p>
            </div>

            <!-- Kitap Açıklaması -->
            <div class="mt-3">
                <h5>Kitap Açıklaması:</h5>
                <p >@Model.Description</p>
            </div>

            <div class="mt-3">
                <h5>Kategori:</h5>
                <p>@Model.CategoryName</p>
            </div>

            <div class="mt-3">
                <h5>Yayıncı:</h5>
                <p>@Model.PublisherName</p>
            </div>

            <!-- Ödünç Al Butonu -->
            <div class="mt-4 mb-5">
                <!-- mb-5 Bootstrap'in alt marjin sınıfıdır -->
                <a href="@Url.Action("Barrow", "BookBarrow", new { bookId = Model.BookId })" class="btn btn-primary btn-lg">Ödünç Al</a>
            </div>

        </div>
    </div>
</section>
