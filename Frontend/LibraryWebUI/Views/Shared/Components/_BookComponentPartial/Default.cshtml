@model List<ResultTopGiveBooks>

<section class="ftco-section bg-light">
    <div class="container">
        <!-- Tablo Başlıkları -->
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th style="width: 20%;">Kitap Resmi</th>
                    <th style="width: 20%;">İsmi</th>
                    <th style="width: 15%;">Yazar Adı</th>
                    <th style="width: 15%;">Kategori</th>
                    <th style="width: 15%;">Yayıncı</th>
                    <th style="width: 20%;">Müsait Kopya Sayısı</th>
                    <th style="width: 15%;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <!-- Kitap Bilgileri -->
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- Kitap Resmi -->
                        <td>
                            <div class="img" style="background-image: url(@item.BookImageUrl); width: 100px; height: 100px; background-size: cover; background-position: center; border-radius: 8px;">
                            </div>
                        </td>

                        <!-- Kitap İsmi -->
                        <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            @item.Title
                        </td>
                        <!-- Yazar Adı -->
                        <td>@item.AuthorName</td>
                        <!-- Kategori -->
                        <td>@item.CategoryName</td>
                        <!-- Yayıncı -->
                        <td>@item.PublisherName</td>
                        <!-- Müsait Kopya -->
                        <td>@item.AvailableCopies</td>
                        <!-- İşlem Butonları -->
                        <td>
                            <a href="#" class="btn btn-primary btn-sm">Ödünç Al</a>
                            <a href="car-single.html" class="btn btn-secondary btn-sm">Detaylar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Sayfalandırma -->
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

