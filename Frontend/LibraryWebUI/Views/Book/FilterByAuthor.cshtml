
@{
    ViewData["Title"] = "FilterByAuthor";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-12 text-center heading-section ftco-animate">
                <span class="subheading">Kütüphane Filtreleme</span>
                <h2 class="mb-3">Kitaplarınızı Seçin</h2>
            </div>
        </div>
        <div class="row">
            <!-- Sol Tarafta Filtreleme Parametreleri -->
            <div class="col-2">
                <!-- Sol panelin genişliğini daha da küçültmek için burayı 2 yaptık -->
                @await Component.InvokeAsync("_BookParametresComponentPartial")
            </div>
            <!-- Sağ Tarafta Kitaplar -->
            <div class="col-10">
                <!-- Sağ panelin genişliğini 10 bıraktık -->
                @await Component.InvokeAsync("_BookFilterByAuthorComponentPartial", new { authorName = ViewBag.authorName ?? "" })
            </div>
        </div>
    </div>
</section>


